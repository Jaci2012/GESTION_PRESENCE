{% extends 'base.html.twig' %}

{% block content %}
    <h1>Listes des niveaux</h1>
    <a href="{{ path('levels_add') }}" class="btn btn-primary">Ajouter un niveau</a>
    <br/><br/>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#ID</th>
                <th>Designation</th>
            </tr>
        </thead>
        <tbody>
            {% for level in levels %}
                <tr>
                    <td>{{ level.id }}</td>
                    <td>{{ level.design }}</td>
                    <td>
                     <a href="{{ path('level_edit', {'id': level.id}) }}" class="btn btn-success btn-sm">Modifier</a>
                    <a href=""
                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')" class="btn btn-danger btn-sm">
                        Supprimer
                    </a>                   
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}